<%- partial('layout') %>

<article class="neumorphism">
  <h1><%= page.title %></h1>
  <div class="post-meta">
    <span><%= date(page.date, 'MMM DD, YYYY') %></span>
    <% if(page.categories && page.categories.length){ %>
    <span><%= page.categories[0] %></span>
    <% } %>
  </div>
  <div class="post-content">
    <%= page.content %>
  </div>
</article>
